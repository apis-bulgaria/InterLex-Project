    <button class="btn btn-transparent-large f-grey f-bold text-left" id="settings-account-deletion" data-url="@Url.Action("AccountDeletion","User", null)" style="font-size: 0.8em;"><span class="fa fa-times"></span> @Resources.UI_AccountDeletion</button>
</div>