@model IEnumerable<Interlex.BusinessLayer.Models.MultiDictTranslation>

<ul id="list-multilingual-dictionary-terms-langs" data-itemid="@ViewBag.ItemId">
    @foreach (var item in Model)
    {
        <li data-langid="@item.LangId" class="@(item.Selected ? "selected" : "")">
            <div class="left width-15 text-center f-blue lang-name-container" style="background-color: #f2f2f2;">
                <span>@item.LangShortCode.ToUpper()</span>
            </div>
            <div class="left width-80 lang-content">
                @if (item.Selected)
                {
                    <span class="fa fa-check-square-o"></span>
                }
                else
                {
                    <span class="fa fa-square-o"></span>
                }
                <span class="multilingual-dictionary-translation-text">@item.Text</span>
                <span class="multilingual-dictionary-translation-search-text">@item.SearchText</span>
            </div>
            <div class="clearfix"></div>
        </li>
    }
</ul>